<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lhd.view.basewithme.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_baseAdapterFragment"
            app:destination="@id/baseAdapterFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_mediaFragment"
            app:destination="@id/mediaFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_pagerTestFragment"
            app:destination="@id/pagerTestFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_listObjectLiveFragment"
            app:destination="@id/listObjectLiveFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.lhd.view.basewithme.ui.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/baseAdapterFragment"
        android:name="com.lhd.view.basewithme.ui.BaseAdapterFragment"
        android:label="BaseAdapterFragment"
        tools:layout="@layout/fragment_base_adapter" />
    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.lhd.view.basewithme.ui.MediaFragment"
        android:label="MediaFragment"
        tools:layout="@layout/fragment_media" />
    <fragment
        android:id="@+id/pagerTestFragment"
        android:name="com.lhd.view.basewithme.ui.PagerTestFragment"
        android:label="PagerTestFragment"
        tools:layout="@layout/fragment_pager_test">
        <action
            android:id="@+id/action_pagerTestFragment_to_tabInfoFragment"
            app:destination="@id/tabInfoFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/tabInfoFragment"
        android:name="com.lhd.view.basewithme.ui.TabInfoFragment"
        android:label="TabInfoFragment"
        tools:layout="@layout/fragment_tab_info" />
    <fragment
        android:id="@+id/listObjectLiveFragment"
        android:name="com.lhd.view.basewithme.ui.ListObjectLiveFragment"
        android:label="ListObjectLiveFragment" />
</navigation>