<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorControlHighlight" tools:ignore="PrivateResource">@color/ripple_material_dark</item>
    </style>

    <style name="BaseImageButton" parent="TextAppearance.AppCompat.Button" tools:ignore="ContentDescription">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextPoppins500" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="TextPoppins800" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
