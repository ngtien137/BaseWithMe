<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorControlHighlight" tools:ignore="PrivateResource">@color/ripple_material_dark</item>
    </style>

    <style name="BaseImageButton" parent="TextAppearance.AppCompat.Button" tools:ignore="ContentDescription">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextPoppinsMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextPoppins" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextRoboto" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextRobotoMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>
